<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="id">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}"  id='name' name='name' aria-describedby="emailHelp" placeholder="Tên khóa học">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id='description' name='description' aria-describedby="emailHelp" placeholder="Mô tả">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{course.level}}" id='level' name="level" aria-describedby="emailHelp" placeholder="Trình độ">
        </div>
        <div class="form-group">
            <label for="videoID">videoID</label>
            <input type="text" class="form-control" value="{{course.id}}" id='videoID' name="videoID" aria-describedby="emailHelp" placeholder="videoID">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>